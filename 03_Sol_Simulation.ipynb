# Notebook 3: Solution Simulation and Business Impact Assessment

import pandas as pd
import numpy as np
import pickle
from sklearn.linear_model import LogisticRegression
import matplotlib.pyplot as plt

# --- Configuration ---
RANDOM_SEED = 42
MODEL_FILE = 'models/rft_prescreen_model.pkl'
DATA_FILE = 'data/SME Loan Pre-Screen_Right-First-Time Applications.xlsx - Loan Application DataSet.csv'

# --- 1. Load Data and Model ---

# Load original data
try:
    df_original = pd.read_csv(DATA_FILE, header=1)
    if 'Unnamed: 0' in df_original.columns:
        df_original = df_original.drop('Unnamed: 0', axis=1)
    df_original.columns = ['S_No', 'Applicant_ID', 'Industry', 'Loan_Amount_Requested', 
              'Loan_Category', 'Applicant_Category', 'Income_Doc_Submitted', 
              'KYC_Submitted', 'Business_Proof_Submitted']
    
    # Define RFT for baseline calculation (same as Notebook 1)
    df_original['is_right_first_time'] = np.where(
        (df_original['Income_Doc_Submitted'] == 'Yes') & 
        (df_original['KYC_Submitted'] == 'Yes') & 
        (df_original['Business_Proof_Submitted'] == 'Yes'), 
        1, 0)

except FileNotFoundError:
    print(f"ERROR: Original data file not found at {DATA_FILE}. Cannot run simulation.")
    exit()

try:
    with open(MODEL_FILE, 'rb') as file:
        rft_model = pickle.load(file)
    with open('models/feature_names.pkl', 'rb') as file:
        feature_names = pickle.load(file)
    print("Successfully loaded model and feature names.")
except FileNotFoundError:
    print("ERROR: Model or feature names not found. Please run '02_ML_Model_Training.ipynb' first.")
    exit()

# Prepare the data for model prediction (df_sim must match the structure of X_train)
df_sim = df_original.copy()
df_sim['Income_Doc_Submitted'] = df_sim['Income_Doc_Submitted'].replace({'Yes': 1, 'No': 0})
df_sim['KYC_Submitted'] = df_sim['KYC_Submitted'].replace({'Yes': 1, 'No': 0})
df_sim['Business_Proof_Submitted'] = df_sim['Business_Proof_Submitted'].replace({'Yes': 1, 'No': 0})

df_sim = pd.get_dummies(df_sim, columns=['Industry', 'Applicant_Category'], drop_first=True)

# Re-create Loan Amount Band features for prediction consistency
bins = [0, 1500000, 3000000, df_sim['Loan_Amount_Requested'].max() + 1]
labels = ['Low_Amount', 'Medium_Amount', 'High_Amount']
df_sim['Loan_Amount_Band'] = pd.cut(df_sim['Loan_Amount_Requested'], bins=bins, labels=labels, right=False)
df_sim = pd.get_dummies(df_sim, columns=['Loan_Amount_Band'], drop_first=True)
df_sim = df_sim.drop('Loan_Amount_Requested', axis=1)

# Align columns to match the features the model was trained on
X_sim = df_sim.reindex(columns=feature_names, fill_value=0) # Must use reindex to align columns


# --- 2. Simulation Step 1: The Eligibility Gate (Hard Filter) ---

# Based on EDA (Notebook 1), we found 'Small' category has the lowest RFT rate.
# We set a hard eligibility filter: 'Small' category is routed to a specialized micro-loan product.
DEFLECTED_CATEGORY = 'Small' 

# Identify deflected applications
df_sim['is_deflected'] = (df_original['Applicant_Category'] == DEFLECTED_CATEGORY)
deflected_count = df_sim['is_deflected'].sum()

print(f"\n--- Gate 1: Eligibility Pre-Screen ---")
print(f"Total Applications Deflected (Applicant Category: '{DEFLECTED_CATEGORY}'): {deflected_count}")

# Original Not RFT apps in the deflected group (these are now "prevented bounces")
original_not_rft_in_deflected = df_original[(df_original['Applicant_Category'] == DEFLECTED_CATEGORY) & (df_original['is_right_first_time'] == 0)].shape[0]
print(f"Original Not RFT Apps prevented by Gate 1: {original_not_rft_in_deflected}")


# --- 3. Simulation Step 2: RFT Score & Guidance (Soft Filter) ---

# Apply the model only to applications that passed the Eligibility Gate
X_passed = X_sim[~df_sim['is_deflected']]

# Generate the RFT Score (Probability of being Right-First-Time)
rft_scores = rft_model.predict_proba(X_passed)[:, 1]
df_sim.loc[~df_sim['is_deflected'], 'rft_score'] = rft_scores

