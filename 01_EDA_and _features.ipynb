# --- Configuration ---
# NOTE: Replace 'data/mock_sme_applications.xlsx' with the actual path to your file.
DATA_FILE = 'data/SME Loan Pre-Screen_Right-First-Time Applications.xlsx'
RANDOM_SEED = 42

# --- 1. Generate Mock Data (Replace with your actual data loading) ---
# Since the actual file is not available, we create a mock dataset based on the description
print("Generating Mock Data for demonstration...")
np.random.seed(RANDOM_SEED)
n_samples = 250
data = {
    'turnover_band': np.random.choice(['< 50L', '50L - 1Cr', '> 1Cr'], n_samples, p=[0.4, 0.35, 0.25]),
    'doc_gst_cert': np.random.choice(['Y', 'N'], n_samples, p=[0.8, 0.2]),
    'doc_bank_stmt': np.random.choice(['Y', 'N'], n_samples, p=[0.9, 0.1]),
    'doc_id_proof': np.random.choice(['Y', 'N'], n_samples, p=[0.95, 0.05]),
    'final_status': np.random.choice(['Approved', 'Rejected', 'Bounced'], n_samples, p=[0.55, 0.15, 0.30]),
}
df = pd.DataFrame(data)

# Introduce correlation: Low turnover and missing GST cert should lead to more bounces
df.loc[(df['turnover_band'] == '< 50L') & (df['doc_gst_cert'] == 'N'), 'final_status'] = 'Bounced'
df.loc[(df['turnover_band'] == '< 50L') & (df['final_status'] == 'Approved'), 'final_status'] = np.random.choice(['Approved', 'Bounced'], sum(df['turnover_band'] == '< 50L'), p=[0.6, 0.4])

