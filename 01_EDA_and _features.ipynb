print("\nInitial Data Head:")
print(df.head())
print("-" * 50)


# --- 2. Data Cleaning and Target Definition ---

# Define the target variable: 'is_right_first_time'
# RFT = 1 (Approved), Not RFT = 0 (Bounced/Rejected)
df['is_right_first_time'] = np.where(df['final_status'] == 'Approved', 1, 0)

# Check the baseline RFT Rate
baseline_rft_rate = df['is_right_first_time'].mean()
print(f"Baseline Right-First-Time (RFT) Rate: {baseline_rft_rate:.2%}")
print("-" * 50)


# --- 3. Exploratory Data Analysis (EDA) ---

# A. Bounce Rate by Turnover Band (Identifying the Ineligibility Gate)
bounce_by_turnover = df.groupby('turnover_band')['final_status'].apply(lambda x: (x == 'Bounced').sum() / x.count()).sort_values(ascending=False)
print("Bounce Rate by Turnover Band (Critical for Eligibility Gate):")
print(bounce_by_turnover)

plt.figure(figsize=(8, 5))
sns.barplot(x=bounce_by_turnover.index, y=bounce_by_turnover.values, palette="Reds_d")
plt.title('Application Bounce Rate by Turnover Band')
plt.ylabel('Bounce Rate')
plt.xlabel('Turnover Band')
plt.show()
# 

# DEDUCTION: The lowest turnover band (e.g., '< 50L') is the biggest bottleneck and needs a hard eligibility filter.

# B. Bounce Rate by Missing Document (Identifying the Document Guidance Priority)
doc_columns = [col for col in df.columns if col.startswith('doc_')]
missing_doc_bounce_rates = {}

for doc in doc_columns:
    # Filter for cases where the doc was missing ('N') and calculate bounce rate
    missing_data = df[df[doc] == 'N']
    if not missing_data.empty:
        bounce_rate = (missing_data['final_status'] == 'Bounced').sum() / len(missing_data)
        missing_doc_bounce_rates[doc] = bounce_rate

doc_bounce_series = pd.Series(missing_doc_bounce_rates).sort_values(ascending=False)
print("\nBounce Rate when Document is Missing (Critical for Guidance Tool):")
print(doc_bounce_series)

plt.figure(figsize=(8, 5))
sns.barplot(x=doc_bounce_series.index, y=doc_bounce_series.values, palette="Blues_d")
plt.title('Bounce Rate When Specific Document is Missing (Indicator: N)')
plt.ylabel('Bounce Rate')
plt.xticks(rotation=45)
plt.show()
# 

# DEDUCTION: Missing the GST Certificate (doc_gst_cert) causes the highest rat
